<h1>Contacts in <%= @list.name %></h1>
<div class="mb-4">
  <%= link_to 'Preview Contacts', preview_contacts_list_path(@list), class: 'btn btn-info' %>
</div>

<div class="mb-4">
  <%= link_to 'Print Labels', generate_labels_list_path(@list), class: 'btn btn-success' %><br><br>
  <%= form_with url: upload_contacts_list_path(@list), local: true, html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :file, "Upload CSV" %>
    <%= form.file_field :file, class: 'form-control' %>
  </div><br>
  <%= form.submit 'Upload', class: 'btn btn-primary' %>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.full_name %></td>
      <td><%= contact.full_address %></td>
      <td>
        <%= link_to 'Edit', edit_list_contact_path(@list, contact), class: 'btn btn-primary btn' %>
        <%= button_to 'Delete',
            list_contact_path(@list, contact),
            method: :delete,
            class: 'btn btn-danger btn',
            form: { class: 'd-inline-block ms-2' },
            onclick: "return confirm('Are you sure you want to delete this contact?');" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Contact', new_list_contact_path(@list) %>
<%= link_to 'Back to List', list_path(@list) %>