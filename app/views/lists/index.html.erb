<h1>Lists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.description %></td>
      <td>
        <%= link_to 'View', list, class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Edit', edit_list_path(list), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Print Labels', generate_labels_list_path(list), class: 'btn btn-success btn-sm' %>
        <%= link_to 'Upload CSV', preview_contacts_list_path(list), class: 'btn btn-info btn-sm' %>
        <%= button_to 'Delete',
            list_path(list),
            method: :delete,
            class: 'btn btn-danger btn-sm',
            form: { class: 'd-inline-block ms-2' },
            onclick: "return confirm('Are you sure? This will delete the entire list and all its contacts.');" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path, class: 'btn btn-success' %>