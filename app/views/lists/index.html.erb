<h1>Lists</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.description %></td>
      <td><%= link_to 'View', list_path(list), class: 'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      <td><%= link_to 'Print Labels', generate_labels_list_path(list), class: 'btn btn-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>